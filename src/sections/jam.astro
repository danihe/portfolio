---
import Profile from '../profile.json';
import Overlay from '../components/overlay.astro';
let visible = true;
---
<section id="jam">
    <content>
        <video id="video" muted loop preload="auto">
            <source src="/portfolio/videos/jam.mp4" type="video/mp4" />
        </video>
        <Overlay id="overlay" visible={visible} />
    </content>
</section>

<style>

section {
}

content {
    display: flex;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    position: relative;
    justify-content: center;
}

</style>

<script type="module" client:load>
  const video = document.querySelector('#video');
  video.load();

  const section = document.querySelector('#jam');
  section.addEventListener('click', () => {
    const overlay = document.querySelector('#overlay');
    if(video.paused) {
        overlay.style.background = `rgba(0,0,0,0)`;
        video.style.filter = `grayscale(0)`;
        video.play();
        video.muted = false;
    }
    else {
        overlay.style.background = `rgba(0,0,0,0.95)`;
        video.style.filter = `grayscale(100)`;
        video.pause();
        video.muted = true;
    }
  })
</script>